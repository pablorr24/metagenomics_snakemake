# Rule to create a sequence bar chart

rule create_sequence_bar_chart_long:
    input:
        txt_file = "{wd}/output/long_reads/{rs}/kraken_report_paths.txt" 
        
    output:
        stackedbarchart = "{wd}/output/long_reads/{rs}/NumSeqPerSample.png"
    shell:
        "python scripts/stackedbarchart.py --input {input.txt_file} --output {output.stackedbarchart}"
